{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "./*.ts",
    "./*/*.ts",
    "./*/**.ts",
    "./*/**/***.ts",
  ]
}